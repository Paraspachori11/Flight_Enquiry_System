    </head>
        <div class="maincontainer">
            <div class="box">
                <div class="heading">
                    <img src="/images/flightpic.png" width="35px">
                    <div style="margin-top: 10px;">Flight Updation</div>
                </div>
                <div class="heading">
                    <div class="rdr">
                        <a href="/flightenquiry/flightinterface"><img src="/images/addRec.png" width="45px"></a>
                        <a href="/flightenquiry/displayflightdata"><img src="/images/displayRec.png" width="45px"></a>
                    </div>
                </div>

                <form action="/flightenquiry/flightupdatecomplete" method="post" class="row g-3">
                    <input type="hidden" id="dbdaystring" value="<%=data.days%>">
                    <input type="hidden" name="flightid" value="<%=data.flight_id%>">
                    <div class="col-md-4">
                        <label for="flightname" class="form-label"><b>Flight Name</b></label>
                        <input type="text" class="form-control" name="flightname" id="flightname" value="<%=data.flight_name%>">
                    </div>
                    <div class="col-md-6">
                        <label for="flighttype" class="form-label"><b>Flight Type</b></label>
                        <select class="form-select" name="flighttype" id="flighttype">
                            <% var echk=''
                                var bchk=''
                                var ebchk=''
                                if('Economy'==data.flight_type)
                                {
                                    echk='selected'
                                }
                                else if('Business'==data.flight_type)
                                {
                                    bchk='selected'
                                }
                                else
                                {
                                    ebchk='selected'
                                }
                            %>
                            <option <%=echk%> > Economy</option>
                            <option <%=bchk%> > Business</option>
                            <option <%=ebchk%> > Economy/Business</option>
                        </select>
                    </div>
                    <div class="col-md-4">
                        <label class="form-label" for="noofseats"><b>Total Seats</b></label>
                        <input type="text" id="noofseats" name="noofseats" class="form-control" value="<%=data.seats%>">
                    </div>
                    <div class="col-md-8">
                        <label class="form-label"><b>Days</b></label>
                        <div class="dayscss">
                        <div class="form-check">
                        <label class="form-check-label" for="days"><b>Sun</b></label>
                        <input type="checkbox" id="days" name="days" value="sun" class="form-check-input chkdays">
                        </div>
                        <div class="form-check">
                        <label class="form-check-label" for="days"><b>Mon</b></label>
                        <input type="checkbox" id="days" name="days" value="mon" class="form-check-input chkdays">
                        </div>
                        <div class="form-check">
                        <label class="form-check-label" for="days"><b>Tues</b></label>
                        <input type="checkbox" id="days" name="days" value="tues" class="form-check-input chkdays">
                        </div>
                        <div class="form-check">
                        <label class="form-check-label" for="days"><b>Wed</b></label>
                        <input type="checkbox" id="days" name="days" value="wed" class="form-check-input chkdays">
                        </div>
                        <div class="form-check">
                        <label class="form-check-label" for="days"><b>Thu</b></label>
                        <input type="checkbox" id="days" name="days" value="thu" class="form-check-input chkdays">
                        </div>
                        <div class="form-check">
                        <label class="form-check-label" for="days"><b>Fri</b></label>
                        <input type="checkbox" id="days" name="days" value="fri" class="form-check-input chkdays">
                        </div>
                        <div class="form-check">
                        <label class="form-check-label" for="days"><b>Sat</b></label>
                        <input type="checkbox" id="days" name="days" value="sat" class="form-check-input chkdays">
                        </div>
                        </div>
                    </div>
                    <div class="col-md-4">
                        <label for="source" class="form-label"><b>Source:</b></label>
                        <div>
                            <select id="source" name="source" class="form-select">
                                <!-- <input type="hidden" id="isource" value="data.mysource"> -->
                                <option value="<%=data.source%>"><%=data.mysource%></option>
                            </select>
                        </div>
                    </div>
                    <div class="col-md-4">
                        <label for="destination" class="form-label"><b>Destination:</b></label>
                        <div>
                            <select id="destination" name="destination" class="form-select">
                                <!-- <input type="hidden" id="idest" value="data.mydestination"> -->
                                <option value="<%=data.destination%>"><%=data.mydestination%></option>
                            </select>
                        </div>
                    </div>
                    <div class="col-md-2">
                        <label for="arrT" class="form-label"><b>Arrival Time:</b></label>
                        <div><input type="time" id="arrT" name="arrT" class="form-control" value="<%=data.arrival_time%>"></div>
                    </div>
                    <div class="col-md-2">
                        <label for="depT" class="form-label"><b>Departure Time:</b></label>
                        <div><input type="time" id="depT" name="depT" class="form-control" value="<%=data.departure_time%>"></div>
                    </div>
                    <div class="col-md-12">
                        <label class="form-label" for="companyname"><b>Company</b></label>
                        <div><input type="text" id="companyname" name="companyname" class="form-control" value="<%=data.company%>"></div>
                    </div>
                    <div class="col-md-6">
                        <button type="submit" name="btn" value="Edit" class="btn btn-dark buttonstyle"><b>Edit</b></button>
                    </div>
                    <div class="col-md-6">
                        <button type="submit" name="btn" value="Delete" class="btn btn-dark buttonstyle"><b>Delete</b></button>
                    </div>        
                </form>
            </div>
        </div>
        <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-kenU1KFdBIe4zVF0s0G1M5b4hcpxyD9F7jL+jjXkk+Q2h455rYXK/7HAuoJl+0I4" crossorigin="anonymous"></script>
</html>