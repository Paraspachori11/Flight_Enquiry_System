<style>
    .maincontainer{
        background: #000;
        width: 100vw;
        height: 100vh;
        display: flex;
        justify-content: center;
        align-items: center;
    }
    .box{
        background: #ffb8b8;
        width: 75vw;
        height: auto;
        border-radius: 40px;
        padding: 15px;
    }
    .heading{
        font-size: 24px;
        letter-spacing: 1px;
        font-weight: bold;
        display: flex;
        flex-direction: column;
        color: #237;
        margin-bottom: 10px;
        width: 50%;
        height: 100px;
        float: left;
        padding-right: 15px;
    }
    .dayscss{
        display: flex;
        flex-direction: row;
        justify-content: space-evenly;
    }
    .buttonstyle{
        width: 100%;
    }
    .rdr{
        display: flex;
        justify-content: end;
        margin-top: 20px;
    }
</style>
<html>
    <head>
        <title>FLIGHT ENQUIRY SYSTEM</title>
        <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-rbsA2VBKQhggwzxH7pPCaAqO46MgnOM80zW1RWuH61DGLwZJEdK2Kadq2F9CUG65" crossorigin="anonymous">
        <script src="https://code.jquery.com/jquery-3.6.3.min.js"></script>
        <script src="/javascripts/linker.js"></script> 
    </head>
        <div class="maincontainer">
            <div class="box">
                <div class="heading">
                    <img src="/images/flightpic.png" width="35px">
                    <div style="margin-top: 10px;">Flight Interface</div>
                </div>
                <div class="heading">
                    <div class="rdr"><a href="/flightenquiry/displayflightdata"><img src="/images/displayRec.png" width="45px"></a></div>
                </div>
                <form action="/flightenquiry/flightsubmit" method="post" enctype="multipart/form-data" class="row g-3">
                    <div class="col-md-4">
                        <label for="flightname" class="form-label"><b>Flight Name</b></label>
                        <input type="text" class="form-control" name="flightname" id="flightname">
                    </div>
                    <div class="col-md-6">
                        <label for="flighttype" class="form-label"><b>Flight Type</b></label>
                        <select class="form-select" name="flighttype" id="flighttype">
                            <option selected>--Select Type--</option>
                            <option>Economy</option>
                            <option>Business</option>
                            <option>Economy/Business</option>
                        </select>
                    </div>
                    <div class="col-md-4">
                        <label class="form-label" for="noofseats"><b>Total Seats</b></label>
                        <div><input type="text" id="noofseats" name="noofseats" class="form-control"></div>
                    </div>
                    <div class="col-md-8">
                        <label class="form-label"><b>Days</b></label>
                        <div class="dayscss">
                        <div class="form-check">
                        <label class="form-check-label" for="days"><b>Sun</b></label>
                        <input type="checkbox" id="days" name="days" value="sun" class="form-check-input">
                        </div>
                        <div class="form-check">
                        <label class="form-check-label" for="days"><b>Mon</b></label>
                        <input type="checkbox" id="days" name="days" value="mon" class="form-check-input">
                        </div>
                        <div class="form-check">
                        <label class="form-check-label" for="days"><b>Tues</b></label>
                        <input type="checkbox" id="days" name="days" value="tues" class="form-check-input">
                        </div>
                        <div class="form-check">
                        <label class="form-check-label" for="days"><b>Wed</b></label>
                        <input type="checkbox" id="days" name="days" value="wed" class="form-check-input">
                        </div>
                        <div class="form-check">
                        <label class="form-check-label" for="days"><b>Thu</b></label>
                        <input type="checkbox" id="days" name="days" value="thu" class="form-check-input">
                        </div>
                        <div class="form-check">
                        <label class="form-check-label" for="days"><b>Fri</b></label>
                        <input type="checkbox" id="days" name="days" value="fri" class="form-check-input">
                        </div>
                        <div class="form-check">
                        <label class="form-check-label" for="days"><b>Sat</b></label>
                        <input type="checkbox" id="days" name="days" value="sat" class="form-check-input">
                        </div>
                        </div>
                    </div>
                    <div class="col-md-4">
                        <label for="source" class="form-label"><b>Source:</b></label>
                        <div>
                            <select id="source" name="source" class="form-select">
                                <option>--Select Source--</option>
                            </select>
                        </div>
                    </div>
                    <div class="col-md-4">
                        <label for="destination" class="form-label"><b>Destination:</b></label>
                        <div>
                            <select id="destination" name="destination" class="form-select">
                                <option>--Select destination--</option>
                            </select>
                        </div>
                    </div>
                    <div class="col-md-2">
                        <label for="arrT" class="form-label"><b>Arrival Time:</b></label>
                        <div><input type="time" id="arrT" name="arrT" class="form-control"></div>
                    </div>
                    <div class="col-md-2">
                        <label for="depT" class="form-label"><b>Departure Time:</b></label>
                        <div><input type="time" id="depT" name="depT" class="form-control"></div>
                    </div>
                    <div class="col-md-5">
                        <label class="form-label" for="companyname"><b>Company</b></label>
                        <div><input type="text" id="companyname" name="companyname" class="form-control"></div>
                    </div>
                    <div class="col-md-3">
                        <label class="form-label" for="logopic"><b>LOGO</b></label>
                        <div><input type="file" id="logopic" name="logopic" class="form-control"></div>
                    </div>
                    <div class="col-md-6">
                        <button type="submit" class="btn btn-dark buttonstyle"><b>Submit</b></button>
                    </div>
                    <div class="col-md-6">
                        <button type="reset" class="btn btn-dark buttonstyle"><b>Reset</b></button>
                    </div>
                    <div class="col-md-12" style="display: flex; justify-content: center; font-size: 20px; letter-spacing: 1px;color: red;padding: 5px;">
                        <b><%=message%></b>
                    </div>         
                </form>
            </div>
        </div>
        <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-kenU1KFdBIe4zVF0s0G1M5b4hcpxyD9F7jL+jjXkk+Q2h455rYXK/7HAuoJl+0I4" crossorigin="anonymous"></script>
</html>